<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gridTitleStandings"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:gravity="center"
    android:background="@drawable/transparent_borders"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/StandingsImagePlayer"
            app:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/player"
            android:layout_width="wrap_content" />

        <TextView
            android:id="@+id/StandingsNamePlayer"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/standings_won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/standings_lost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/standings_both"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:textSize="20sp"/>

</LinearLayout>

